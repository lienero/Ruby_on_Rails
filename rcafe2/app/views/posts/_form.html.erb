<%= simple_form_for(@bulletin.present? ? [@post.bulletin, @post] : @post) do |f| %>
<%# new와 edit 뷰 템플릿 파일에서 사용하는 form 파셜 템플릿 파일 %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content, input_html: { rows: 10 } %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Show', @post, class: 'btn btn-default' if @post.persisted? %>
    <%= link_to 'List', posts_path, class: 'btn btn-default' %>    
  </div>
<% end %>